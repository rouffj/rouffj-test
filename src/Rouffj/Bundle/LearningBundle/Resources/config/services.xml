<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="router.class">Rouffj\Bundle\LearningBundle\Routing\Router</parameter>
        <parameter key="rouffj_learning.twig.learning_extension.class">Rouffj\Bundle\LearningBundle\Twig\Extension\LearningExtension</parameter>
    </parameters>
    <services>
        <service id="rouffj_learning.twig.learning_extension" class="%rouffj_learning.twig.learning_extension.class%">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
